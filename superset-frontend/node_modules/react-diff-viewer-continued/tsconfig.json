{
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "target": "es2015",
    "declaration": true,
    "downlevelIteration": true,
    "lib": ["es2017", "dom"],
    "types": ["jest", "node"]
  },
  "include": ["./src/*"],
  "exclude": ["node_modules"]
}
